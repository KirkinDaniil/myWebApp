<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <title>Sign Up</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/assets/css/theme.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,400i,600,700&display=swap" rel="stylesheet">
</head>

<body>
    <section class="row no-gutters p-0 bg-light min-vh-100">
        <div class="col-lg-6 d-none d-lg-block order-lg-2">
            <img class="flex-fill" src="~/shakaly.jpg" alt="Image">
        </div>
        <div class="col-lg-6">
            <section class="p-0 bg-light">
                <div class="container min-vh-lg-100 d-flex flex-column justify-content-center text-center py-4 py-md-5">
                    <a href="https://wolfskillsproject.azurewebsites.net/" class="fade-page">
                        <img src="~/logo.png" class="logo" alt="WolfSkills">
                    </a>
                    <div class="row justify-content-center my-5">
                        <div class="col-xl-7 col-lg-8">
                            <div class="card card-body shadow text-left">
                                <h1 class="h5 text-center">Создать аккаунт</h1>
                                <form>
                                    <div class="form-group">
                                        <input type="text" id="name" class="form-control" name="sign-up-name" placeholder="Как вас зовут?">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" id="surname" class="form-control" name="sign-up-surname" placeholder="Фамилия">
                                    </div>
                                    <div class="form-group">
                                        <input type="email" id="mail" class="form-control" name="sign-up-email" placeholder="Электронная почта">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" id="login" class="form-control" name="sign-up-login" placeholder="Придумайте логин">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="pass" class="form-control" name="sign-up-password" placeholder="Пароль">
                                        <small>Пароль должен состоять минимум из 8 символов</small>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="confirm" class="form-control" name="sign-up-password-confirm" placeholder="Подтвердите пароль">
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox text-small">
                                            <input type="checkbox" class="custom-control-input" id="sign-up-agree">
                                            <label class="custom-control-label" for="sign-up-agree">
                                                Я согласен с <a target="_blank" href="#!">Политикой обработки данных</a>
                                            </label>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary btn-block" type="submit">Зарегистрироваться</button>
                                </form>
                            </div>
                            <div class="text-center text-small mt-3">
                                @Html.ActionLink("Already have one?", "Login", "Home")
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>

    <script type="text/javascript" src="~/assets/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/assets/js/popper.min.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/assets/js/Регистрация.js"></script>

</body>

</html>